{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
